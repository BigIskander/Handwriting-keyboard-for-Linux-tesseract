{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "shortDescription": "Handwriting keyboard for Linux.",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "python/run_paddle_ocr.py"  
    ],
    "longDescription": "Handwriting keyboard for Linux X11 desktop environment. \n\n To recognize handwritten pattern program uses tesseract-ocr. \n\n Github page: \n\n https://github.com/BigIskander/Handwriting-keyboard-for-Linux-tesseract",
    "category": "Education",
    "linux": {
      "deb": {
        "depends": [
          "xdotool",
          "tesseract-ocr"
        ]
      }
    }
  },
  "productName": "handwriting-keyboard-t",
  "mainBinaryName": "handwriting-keyboard-t",
  "version": "1.2.0",
  "identifier": "com.handwriting-keyboard-t.dev",
  "plugins": {
    "cli": {
      "description": "",
      "longDescription": "",
      "beforeHelp": "",
      "afterHelp": "",
      "args": [
        {
          "name": "tessdata-dir",
          "takesValue": true
        },
        {
          "name": "lang",
          "short": "l",
          "takesValue": true
        },
        {
          "name": "automode",
          "short": "a",
          "takesValue": false
        },
        {
          "name": "skip-taskbar",
          "takesValue": false
        },
        {
          "name": "fly-to-bottom",
          "takesValue": false
        },
        {
          "name": "return-focus",
          "takesValue": false
        },
        {
          "name": "debug",
          "takesValue": false
        },
        {
          "name": "use-clipboard",
          "takesValue": false
        },
        {
          "name": "dark-theme",
          "takesValue": false
        },
        {
          "name": "use-tmp-file",
          "takesValue": false
        },
        {
          "name": "use-paddle-ocr",
          "takesValue": false
        }
      ]
    }
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "focus": false,
        "title": "手写",
        "width": 800,
        "height": 300,
        "minWidth": 800,
        "minHeight": 300,
        "alwaysOnTop": true,
        "useHttpsScheme": true
      }
    ],
    "security": {
      "csp": null
    }
  }
}